<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
    <body>
        <!-- Navigation -->
        <%- include('partials/nav', {home: "active", addMeme: ""}) %>
        <!-- Header-->
        <%- include('partials/header') %>
        <!-- Section -->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                    <!-- This will be your HTML Meme template that you will use to dynamically render all Memes -->
                    <% memes.forEach(function(meme) { %>
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Meme image-->
                                <img class="card-img-top" src="<%= meme.imgURL %>" alt="..." />
                                <!-- Meme details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Meme name-->
                                        <h5 class="fw-bolder"><%= meme.name %></h5>
                                        <!-- Meme price-->
                                        <p><%= meme.price %></p>
                                    </div>
                                </div>
                                <!-- Meme actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Buy Meme</a></div>
                                </div>
                            </div>
                        </div>
                      <% }); %>
                </div>
            </div>
        </section>
        <!-- Footer -->
        <%- include('partials/footer') %>
    </body>
</html>